modules = ["nodejs-20", "python-3.11", "web"]
run = "node index.js"

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create Test Data"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Pinecone"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Import Theological Content"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test OpenAI"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Bible App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Import Promises"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Import Bible Data"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow]]
name = "Process Outbox"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python outbox_processor.py"

[[workflows.workflow]]
name = "Create Test Data"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_data.py"

[[workflows.workflow]]
name = "Test Pinecone"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_pinecone.py"

[[workflows.workflow]]
name = "Import Theological Content"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python import_theological_content.py"

[[workflows.workflow]]
name = "Test OpenAI"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_openai_connection.py"

[[workflows.workflow]]
name = "Bible App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 8080

[[workflows.workflow]]
name = "Import Promises"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python import_promises.py"

[[workflows.workflow]]
name = "Import Bible Data"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python import_bible_data.py"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[deployment]
run = ["sh", "-c", "node index.js"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 8081
externalPort = 8081
